<MainScreen>:
    id: main
    orientation: 'vertical'
    Label:
        id: welcome_label
        text: "Welcome, " + root.user_name
        color: [1, 0, 0, 1]  # RGB and alpha: red text
    Button:
        text: 'Logout'
        on_press: app.root.current = 'login'
    Button:
        text: 'Add New Patient'
        on_press: app.root.current = 'new_patient'
    Button:
        text: 'Add Seizure Information'
        on_press: app.root.current = 'seizure_info'
    Button:
        text: 'View Seizure Statistics'
        on_press: app.root.current = 'seizure_stats'
