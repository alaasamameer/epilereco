<NewPatientScreen>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: name_input
            hint_text: 'Name'
        TextInput:
            id: birth_date_input
            hint_text: 'Birth Date'
        Spinner:
            id: sex_input
            text: 'Select Sex'
            values: ['Male', 'Female', 'Other']
        Button:
            text: 'Save Patient'
            on_press: root.save_patient(name_input.text, birth_date_input.text, sex_input.text)
