<SignupScreen>:
    orientation: 'vertical'
    Label:
        text: 'Create an Account'
    TextInput:
        id: username
        hint_text: 'Username'
    TextInput:
        id: password
        hint_text: 'Password'
        password: True
    TextInput:
        id: confirm_password
        hint_text: 'Confirm Password'
        password: True
    Button:
        text: 'Sign Up'
        on_press: root.signup(username.text, password.text, confirm_password.text)
